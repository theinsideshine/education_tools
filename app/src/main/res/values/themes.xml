<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EducationTools" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="android:colorBackground">@color/md_white_1000</item>

        <!-- Default background buttons and top education tools. -->
        <item name="colorPrimary">@color/ColorPrimaryDark</item>
        <!-- Bar where wifi is shown. -->
        <item name="colorPrimaryVariant">@color/ColorPrimaryDark</item>
        <!--Default text buttons.-->
        <item name="colorOnPrimary">@color/ColorSecondatyText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_orange_900</item>
        <item name="colorSecondaryVariant">@color/md_green_500</item>
        <item name="colorOnSecondary">@color/md_yellow_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>